{
  "verbose": true,
  "preset": "ts-jest",
  "testPathIgnorePatterns": [
    "<rootDir>/tests-e2e/*",
    "<rootDir>/node_modules/",
    "<rootDir>/quadratic-api/*",
    "<rootDir>/quadratic-core/*"
  ],
  "modulePathIgnorePatterns": ["quadratic-core/pkg/package.json"],
  "transform": {
    "^.+\\.(ts|tsx|js|jsx)?$": "ts-jest",
    "\\.py$": "<rootDir>/jest-transformer-py"
  },
  "testTimeout": 15000
}
